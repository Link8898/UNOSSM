<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="noaharnavrobert.unossm.LCController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Game Lobby">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="383.0" prefWidth="460.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <Label layoutX="163.0" layoutY="14.0" text="Current Players:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <VBox fx:id="playerList" layoutX="180.0" layoutY="49.0" prefHeight="126.0" prefWidth="458.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="49.0" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <Label fx:id="playercount" layoutX="118.0" layoutY="79.0" text="2 Players Required to start game (1 / 100)" textFill="RED" />
                  <Button fx:id="leave" layoutX="204.0" layoutY="127.0" mnemonicParsing="false" text="Leave" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
      <Label fx:id="ip" />
   </children>
</VBox>
