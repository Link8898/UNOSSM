<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="noaharnavrobert.unossm.LSController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Game Lobby">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="383.0" prefWidth="460.0">
        <items>
            <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="175.0" prefWidth="458.0">
               <top>
                  <Label text="Current Players:" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </top>
               <center>
                  <Label fx:id="playerList" text="hi" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <Button fx:id="startgame" layoutX="171.0" layoutY="84.0" mnemonicParsing="false" onAction="#startGame" prefHeight="51.0" prefWidth="117.0" text="Start Game">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Label fx:id="playercount" layoutX="118.0" layoutY="43.0" text="2 Players Required to start game (1 / 100)" textFill="RED" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
      <Label fx:id="ip" />
   </children>
</VBox>
