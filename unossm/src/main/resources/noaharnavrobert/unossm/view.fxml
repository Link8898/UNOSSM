<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="750.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="noaharnavrobert.unossm.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="200.0" prefWidth="554.0">
      <children>
         <Button fx:id="draw" layoutX="243.0" layoutY="6.0" onAction="#onDrawButtonClick" text="Draw" />
         <Button fx:id="quit" layoutX="670.0" layoutY="6.0" mnemonicParsing="false" text="Music" />
         <Label id="current" fx:id="textboxcurrent" layoutX="445.0" layoutY="13.0" text="Current Card:" />
         <Button fx:id="playedcard" layoutX="430.0" layoutY="45.0" minWidth="53.0" mnemonicParsing="false" prefHeight="149.0" prefWidth="111.0" text="Button" />
      </children>
   </Pane>
    <AnchorPane fx:id="container" prefHeight="179.0" prefWidth="482.0" style="-fx-background-color: darkgreen;">
        <children>
            <ImageView fx:id="image" fitHeight="229.0" fitWidth="960.0">
                <image>
                    <Image url="@../../images/felt.jpeg" />
                </image>
            </ImageView>
        </children></AnchorPane>
</VBox>
