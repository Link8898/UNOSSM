<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="noaharnavrobert.unossm.LoadingController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="UNOSSM">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0">
        <items>
          <AnchorPane prefHeight="182.0" prefWidth="226.0">
               <children>
                  <TextField fx:id="inputbox" layoutX="17.0" layoutY="96.0" prefHeight="26.0" prefWidth="192.0" />
                  <Text layoutX="78.0" layoutY="75.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter IP Here" />
                  <Label layoutX="53.0" layoutY="14.0" text="Join a game">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Button fx:id="join" layoutX="94.0" layoutY="131.0" mnemonicParsing="false" onAction="#onJoinGame" text="Join" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <Button fx:id="startgame" layoutX="68.0" layoutY="106.0" mnemonicParsing="false" onAction="#onCreateGame" text="Create Game" />
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutX="46.0" layoutY="14.0" text="Create Game" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label layoutX="90.0" layoutY="43.0" text="Local IP:" />
                  <Label id="ipbox" fx:id="ipbox" alignment="CENTER" contentDisplay="CENTER" layoutX="66.0" layoutY="70.0" prefHeight="17.0" prefWidth="94.0" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
      <AnchorPane prefHeight="83.0" prefWidth="460.0">
         <children>
            <TextField fx:id="namebox" layoutX="150.0" layoutY="42.0" />
            <Label layoutX="162.0" layoutY="14.0" text="Enter your name here:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
